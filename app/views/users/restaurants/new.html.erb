<div class="container min-height">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    	<h1>店の新規登録</h1>

		<%= form_for(@restaurant, url: users_restaurants_path) do |f| %>

			<div class="field">
				<%= f.label :name, "店名" %><br />
				<%= f.text_field :name, autofocus: true, require: true %>
			</div>

			<div class="field">
    			<%= f.label :genre_id, "ジャンル" %><br />
        		<%= f.collection_select :genre_id, Genre.all, :id,:name %>
        	</div>

    		<div class="field">
    			<%= f.label :budget, "予算" %><br />
    			<%= f.number_field :budget, autofocus: true %>
    		</div>

			<div class="field">
    			<%= f.label :postal_code, "郵便番号" %><br />
    			<%= f.text_field :postal_code, autofocus: true %>
    		</div>

			<div class="field">
    			<%= f.label :address, "住所" %><br />
        		<%= f.text_area :address, autofocus: true %>
        	</div>

        	<div class="field">
        		<%= f.label :station_id, "最寄り駅" %><br />
    			<%= f.collection_select :station_id, Station.all, :id, :name %>
    		</div>

            <div class="field">
                <%= f.label :image, "店の画像" %><br />
                <%= f.attachment_field :image %>
                <%= attachment_image_tag @restaurant, :image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg", size:'150x150' %>
            </div>

    		<div class="actions">
    			<%= f.submit "登録" %>
        	</div>
		<% end %>
    </div>
  </div>
</div>