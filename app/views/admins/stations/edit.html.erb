			<h1><%= @station.name %>駅の編集画面</h1>

			<%= form_for(@station, url: admins_station_path) do |f| %>
				<div>
					<%= f.label :name, "駅名" %><br />
					<%= f.text_field :name, autofocus: true, require: true %>
				</div>

    		<div>
    			<%= f.label :address, "住所" %><br />
     			<%= f.text_area :address, autofocus: true %>
    		</div>

    		<div>
      		<%= f.submit "更新" %>
      		<%= link_to @station.name + '駅の詳細画面へ戻る', admins_station_path(@station) %>
      	</div>
			<% end %>

			